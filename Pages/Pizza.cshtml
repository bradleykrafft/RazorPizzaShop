@page
@model RazorPizzaShop.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great pizza selection!</h1>
        <h4 class="mainSubTitle">Choose one, or tyr our Pizza Builder! Then Order and Done!</h4>
        <h4 class="mainSubTitle">No need to give details!</h4>
        <h4 class="mainSubTitle">We already know everything!</h4>
        <p class="smallText"><i>Only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/Images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create Your Own Pizza</h3>
                            <p style="text-align: left;">Make Your Own Pizza With Our Pizza Maker!</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Try Now!</a>
                        </div>
                    </div>
                </div>
            </div>
            
        @foreach (var pizza in Model.fakePizzaDb)
        {
            var imagePath = "~/Images/Pizzas/" + (pizza.ImageTitle + ".png");

            <div class="col-4 mb-5">
                
                <a class="pizza-img" asp-area="" asp-page="Checkout/Checkout" asp-route-PizzaName="@pizza.ImageTitle"
                       asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice"><img src="@imagePath" class="w-100" asp-append-version="true" /></a>
                <br />
            </div>
        }
         </div>
    </div>
</div>



